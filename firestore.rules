rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /gameResults/{docId} {
      // Allow reads when the stored doc has a numeric clicks field.
      allow read: if resource.data.clicks is int;
      // Allow writes when the incoming doc sets a numeric clicks field.
      allow write: if request.resource.data.clicks is int;
    }
  }
}

